<% layout('layouts/boilerplate') %>
<!--Now we only need to include this one line instead of making two separate partials for Header and Footer-->

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3"> <!--way to get the middle 6 of the column-->
        <form action="/campgrounds" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title"> Title </label>
            <input class="form-control" tyype="text" id="title" name="campground[title]"> </input>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location"> Location </label>
            <input class="form-control" type="text" id="location" name="campground[location]"> </input>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image"> Image URL </label>
            <input class="form-control" type="text" id="image" name="campground[image]"> </input>
        </div>
        <div class="mb-3">
            <label class="form-label" for="price"> Campground Price </label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1"> â‚¹ </span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-describedby="price-label" name="campground[price]">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description"> Description </label>
            <textarea class="form-control" type="text" id="image" name="campground[description]"> </textarea>
        </div>
        <button class="btn btn-success"> Add Campground </button>
        </form>
        <div class="mb-3">
            <a href="/campgrounds">All Campgrounds </a> 
        </div>            
    </div>
</div>